<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="commentBackgroundLight">@color/commentBgNormalLight</item>
        <item name="commentBackgroundDark">@color/commentBgSelectedLight</item>
        <item name="iconTint">@color/active_icon</item>
        <item name="separator">@color/dividerLight</item>
        <item name="cardsDialog">@color/cardBackgroundLight</item>

        <!-- Box score drawables -->
        <item name="boxScoreSquareWhite">@drawable/square_white</item>
        <item name="boxScoreSquareBlack">@drawable/square_black</item>
        <item name="boxScoreBackground">@color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <item name="colorPrimaryLight">@color/nightColorPrimaryLight</item>
        <item name="colorAccent">@color/nightColorAccent</item>
        <item name="android:textColorPrimary">@color/nightPrimaryText</item>
        <item name="android:textColorSecondary">@color/nightSecondaryText</item>
        <item name="android:windowBackground">@color/nightColorBackground</item>
        <item name="commentBackgroundLight">@color/commentBgNormalDark</item>
        <item name="commentBackgroundDark">@color/commentBgSelectedDark</item>
        <item name="iconTint">@color/active_icon_dark</item>
        <item name="separator">@color/dividerDark</item>
        <item name="cardsDialog">@color/cardBackgroundDark</item>

        <!-- Box score drawables -->
        <item name="boxScoreSquareWhite">@drawable/square_white_dark</item>
        <item name="boxScoreSquareBlack">@drawable/square_black_dark</item>
        <item name="boxScoreBackground">#303030</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent="AppTheme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark"/>

</resources>
